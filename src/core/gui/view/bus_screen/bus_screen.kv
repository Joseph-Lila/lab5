<BusScreenView>:
    id: bus_screen_root
    buses: buses
    cog: cog

    MDCard:
        padding: [10, 10, 10, 10]
        orientation: "vertical"

        AnchorLayout:
            size_hint_y: .2

            BoxLayout:

                MDTextField:
                    size_hint_x: .9
                    icon_left: "magnify"
                    hint_text: "enter fio"
                    line_color_normal: "red"
                    mode: "fill"
                    fill_color_normal: app.theme_cls.primary_dark
                    fill_color_focus: 32/255, 77/255, 62/255, 255/255
                    text_color_normal: "red"
                    text_color_focus: "red"
                    hint_text_color_normal: "white"
                    hint_text_color_focus: "white"
                    icon_left_color_normal: "white"
                    icon_left_color_focus: "white"
                    on_text: root.presenter.on_text_search(self, self.text)

                MDIconButton:
                    id: cog
                    icon: "cog-box"
                    on_release: root.menu.open()

        ScrollView:
            size: self.size

            MDGridLayout:
                bus_screen_root: bus_screen_root
                id: buses
                cols: 1
                size_hint_y: None
                row_default_height: '300dp'
                adaptive_height:True
                spacing: 5, 5
                padding: 10, 10, 10, 10
