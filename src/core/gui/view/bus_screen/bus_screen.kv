<BusScreenView>:
    MDCard:
        padding: [10, 10, 10, 10]
        orientation: "vertical"

        AnchorLayout:
            size_hint_y: .2

            BoxLayout:

                MDTextField:
                    size_hint_x: .9
                    icon_left: "magnify"
                    hint_text: "enter fio"
                    line_color_normal: "red"
                    mode: "fill"
                    fill_color_normal: app.theme_cls.primary_dark
                    fill_color_focus: 32/255, 77/255, 62/255, 255/255
                    text_color_normal: "red"
                    text_color_focus: "red"
                    hint_text_color_normal: "white"
                    hint_text_color_focus: "white"
                    icon_left_color_normal: "white"
                    icon_left_color_focus: "white"
                    on_text: root.presenter.on_text_search(self, self.text)

                MDIconButton:
                    icon: "cog-box"

        ScrollView:
            size: self.size

            GridLayout:
                cols: 1
                size_hint_y: None
                row_default_height: '50dp'
                row_force_default: True
                spacing: 5, 5
                padding: 10, 10, 10, 10

                Button:
                    text: "1"

                Button:
                    text: "2"
